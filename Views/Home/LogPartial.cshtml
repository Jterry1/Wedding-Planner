@model Login
<form asp-action="Login" method="post">
   <div class="form-group">
        <span asp-validation-for="LoginEmail"></span><br>
        <label asp-for="LoginEmail"></label>
        <input asp-for="LoginEmail">
    </div>
    <div class="form-group">
        <span asp-validation-for="LoginPassword"></span><br>
        <label asp-for="LoginPassword"></label>
        <input asp-for="LoginPassword">
    </div>
    <input type="submit" value="Login">
</form>  
